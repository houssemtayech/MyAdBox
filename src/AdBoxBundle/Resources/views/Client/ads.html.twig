    <script>
    $(document).ready(function(){

      $("li[role='presentation'] a").click(function(){
        $("li[role='presentation'][class='active']").removeAttr("class");
        $(this).parent().attr("class","active");
        $("#selectedDropdown").html($(this).html()+'<span class="caret"></span>');

        $.ajax({
          method: "POST",
          url : "http://localhost{{path('myads_client_page_Filter')}}",
          data : {search : $("#inputSearch").val(),filter:$("li[role='presentation'][class='active'] a").html()}
        }).done(function(data){
          $(".tab-content").html(data);

        }).fail(function(){
          alert("fail search");
        });
      });

      $("#inputSearch").keyup(function(){
            $.ajax({
              method: "POST",
              url : "http://localhost{{path('myads_client_page_Filter')}}",
              data : {search : $(this).val(),filter:$("li[role='presentation'][class='active'] a").html()}
            }).done(function(data){
              $(".tab-content").html(data);

            }).fail(function(){
              alert("fail search");
            });
      });
    });


