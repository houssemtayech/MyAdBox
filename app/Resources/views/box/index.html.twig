{% extends 'base.html.twig' %}

{% block body %}
    <h1>Box list</h1>

    <table>
        <thead>
            <tr>
                <th>Boxid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for box in boxes %}
            <tr>
                <td><a href="{{ path('box_show', { 'id': box.id }) }}">{{ box.boxid }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('box_show', { 'id': box.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('box_edit', { 'id': box.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('box_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
