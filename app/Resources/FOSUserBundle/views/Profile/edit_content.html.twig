
{% trans_default_domain 'FOSUserBundle' %}


<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST">
    <div class="form-group" id="fos_user_registration_form">
        <div class="form-group form-material floating">
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}</br>
            {{ form_errors(form.email) }}
            <label class="floating-label" for="inputEmail">Email</label>
        </div>
        <div class="form-group form-material floating">
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}</br>
            {{ form_errors(form.username) }}
            <label class="floating-label" for="inputEmail">Username</label>
        </div>
        <div class="form-group form-material floating">
            {{ form_widget(form.cin, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.cin) }}
            <label class="floating-label" for="inputEmail">CIN</label>
        </div>
        <div class="form-group form-material floating">
            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.firstName) }}
            <label class="floating-label" for="inputEmail">First name</label>
        </div>
        <div class="form-group form-material floating">
            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.lastName) }}
            <label class="floating-label" for="inputEmail">Last name</label>
        </div>
        <div class="form-group form-material floating">
            {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}</br>
            {{ form_errors(form.current_password) }}
            <label class="floating-label" for="inputEmail">Current Password</label>
        </div>

    </div>
    <div class="col-md-8">

    <div>
        <input type="submit" class="btn btn-primary btn-block " value="Confirm Edit"/>
    </div>
    </div>
    {{ form_rest(form) }}
</form>